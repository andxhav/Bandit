
<% if @current_user == nil %>
  <% welcome_tile = "Log-In" %>
  <% path = "/users/sign_in" %>
<% elsif Musician.find_by(user_id: @current_user.id) == nil%>
  <% welcome_tile = "Create a Musician Profile" %>
  <% path = "/musicians/new" %>
  <% start_band_path = "/musicians/new" %>
<% else %>
  <% welcome_tile = "Musician Profile" %>
  <% musician = Musician.find_by(user_id: @current_user.id) %>
  <% path = "/musicians/#{musician.id}" %>
  <% start_band_path = "/bands/new" %>
<% end %>




